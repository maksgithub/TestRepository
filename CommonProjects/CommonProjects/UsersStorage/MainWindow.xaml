<Window x:Class="UsersStorage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UsersStorage"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical" Margin="0, 100,0,0">
        <TextBox Name="TextBoxName" Width="200" Margin="10"/>
        <TextBox Name="TextBoxPassword" Width="200"  Margin="10"/>
        <Button Content="Login" Width="200"  Margin="10" Click="ButtonBase_OnClick"/>

    </StackPanel>
</Window>
